<div class="form-container">
	<h2>Đổi mật khẩu</h2>
	<form action="/Account/ChangePassword" method="post">
		<div class="form-group">
			<label>Mật khẩu củ</label>
			<input type="password" name="oldPassword" placeholder="Nhập mật khẩu củ">
			@Html.ValidationMessage("oldPassword", new { @style = "color:#f00" })
		</div> <div class="form-group">
			<label>Mật khẩu mới</label>
			<input type="password" name="newPassword" placeholder="Nhập mật khẩu mới">
			@Html.ValidationMessage("newPassword", new { @style = "color:#f00" })
		</div> <div class="form-group"> 
			<label>Xác nhận mật khẩu</label> 
			<input type="password" name="confirmPassword" placeholder="Nhập xác nhân mật khẩu">
			@Html.ValidationMessage("confirmPassword", new { @style = "color:#f00" })
			@Html.ValidationMessage("Success", new { @style = "color:rgb(20, 53, 195)" }) 
		</div> 
		<button type="submit" class="btn btn-primary btn-checkout bg-primary-color">Đổi mật khẩu</button>
	</form>
</div>