@model Employeer
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
<div class="box box-danger">
    <div class="box-body">
        <form class="form-horizontal" method="post" action="~/Employeer/Delete/@Model.EmployeeID">
            <div class="form-group">
                <label class="control-label col-sm-2">Họ Và tên:</label>
                <div class="col-sm-10">
                    <p class="form-control-static form-control">@Model.FullName</p>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Ngày Sinh:</label>
                <div class="col-sm-10">
                    <p class="form-control-static form-control">@Model.BirthDate.ToString("dd/MM/yyyy")</p>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Địa Chỉ:</label>
                <div class="col-sm-10">
                    <p class="form-control-static form-control">@Model.Address</p>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Điện Thoại:</label>
                <div class="col-sm-10">
                    <p class="form-control-static form-control">@Model.Phone</p>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Email:</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.Email</p>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Trạng Thái:</label>
                <div class="col-sm-10">
                    @if (Model.IsWorking)
                    {
                        <p class="form-control-static">Đang Làm Việc</p>
                    }
                    else
                    {
                        <p class="form-control-static">Không Làm Việc</p>
                    }
                </div>
            </div>
            <div class="form-group">
                <div class="col-lg-offset-2 col-sm-10">
                    @if (Model.Photo == "")
                    {
                        <img id="Photo" class="img img-bordered" style="width:200px" src="~/images/Employee/noimage.jpg">
                    }
                    else
                    {
                        <img class="img img-bordered" style="width:200px" src="~/images/Employee/@Model.Photo">
                    }
                </div>
            </div>
            <div class="form-group">
                <div class="col-lg-offset-2 col-sm-10">
                    @if (!CommomDataService.InUseEmployeer(Model.EmployeeID))
                    {
                        <button type="submit" class="btn btn-danger" onclick="return confirm('Xóa nhân viên này?')">
                            <i class="fa fa-trash"></i>
                            Xóa
                        </button>
                    }
                    <a href="~/Employeer" class="btn btn-default">
                        Quay Lại
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>


