@model Supplier
@{
}
<div class="box box-primary">
	<div class="box-body">
        <form action="~/Supplier/Save" method="post">
            <input type="hidden" name="@nameof(Model.SupplierID)" value="@Model.SupplierID" />
            <div class="form-group">
                <label>Tên Nhà Cung Cấp:</label>
                <input type="text" class="form-control" autofocus value="@Model.SupplierName" name="@nameof(Model.SupplierName)">
                @Html.ValidationMessage(nameof(Model.SupplierName), new { @style = "color:#f00" })
            </div>
            <div class="form-group">
                <label >Tên Giao Dịch:</label>
                <input type="text" class="form-control" value="@Model.ContactName" name="@nameof(Model.ContactName)">
                @Html.ValidationMessage(nameof(Model.ContactName), new { @style = "color:#f00" })
            </div>
            <div class="form-group">
                <label>Số Điện Thoại:</label>
                <input type="text" class="form-control" value="@Model.Phone" name="@nameof(Model.Phone)">
                @Html.ValidationMessage(nameof(Model.Phone), new { @style = "color:#f00" })
            </div>
            <div class="form-group">
                <label>Email:</label>
                <input type="email" class="form-control" value="@Model.Email" name="@nameof(Model.Email)">
                @Html.ValidationMessage(nameof(Model.Email), new { @style = "color:#f00" })
            </div>
            <div class="form-group">
                <label>Địa Chỉ:</label>
                <input type="text" class="form-control" value="@Model.Address" name="@nameof(Model.Address)">
                @Html.ValidationMessage(nameof(Model.Address), new { @style = "color:#f00" })
            </div>
            <div class="form-group" >
                <label>Tỉnh/ Thành:</label>
                <select class="form-control select2" name="@nameof(Model.Province)">
                    <option value="">-- Chon Tinh/ Thanh --</option>
                    @foreach (var i in SV21T1020035.BusinessLayers.CommomDataService.ListOfProvince())
                    {
                        if (i.ProvinceName == Model.Province)
                        {
                            <option selected>@i.ProvinceName</option>
                        }
                        else
                        {
                            <option>@i.ProvinceName</option>
                        }
                    }
                </select>
                @Html.ValidationMessage(nameof(Model.Province), new { @style = "color:#f00" })
            </div>
            <div class="form-group text-right">
                <button type="submit" class="btn btn-primary" onclick="return confirmAlternativeData(@Model.SupplierID)">
                    <i class="fa fa-floppy-o"></i> Lưu Trữ
                </button>
                <a href="~/Supplier" class="btn btn-default">
                    Quay Lại
                </a>
            </div>
        </form>
	</div>
</div>