@model SV21T1020035.Web.Models.ShipperSearchResult
@{
	Layout = null;
}
<p>
	Có tổng số <b>@Model.RowCount</b> giao hàng trong tổng số <b>@Model.PageCount</b> trang
</p>
<div class="table-responsive">
	<table class="table table-bordered table-hover table-striped">
		<thead>
			<tr class="bg-primary">
				<th>Tên Giao Hàng</th>
				<th>Số Điện Thoại</th>
				<th style="width:80px"></th>
			</tr>
		</thead>
		<tbody>
			@foreach (var i in Model.Data)
			{
				<tr>
					<th>@i.ShipperName</th>
					<th>@i.Phone</th>
					<th>
						<a href="~/Shipper/Edit/@i.ShipperID" class="btn btn-xs btn-info">
							<i class="fa fa-edit"></i>
						</a>
						<a href="~/Shipper/Delete/@i.ShipperID" class="btn btn-xs btn-danger">
							<i class="fa fa-trash"></i>
						</a>
					</th>
				</tr>
			}
		</tbody>
	</table>
</div>
<div class="text-center">
	<ul class="pagination">
		@for (int i = 1; i <= Model.PageCount; i++)
		{
			if (i == Model.Page)
			{
				<li class="active"><a href="#">@i</a></li>
			}
			else
			{
				<li><a href="" onclick="doSearch(@i)">@i</a></li>
			}
		}
	</ul>
</div>