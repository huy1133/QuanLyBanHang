@model Customer
@{
}
<div class="box box-primary">
    <div class="box-body">
        <form action="~/Customer/Save" method="post">
            <input type="hidden" name="@nameof(Model.CustomerID)" value="@Model.CustomerID" />
            <div class="form-group">
                <label>Tên Khách Hàng:</label>
                <input type="text" class="form-control" autofocus 
                       name="@nameof(Model.CustomerName)" value="@Model.CustomerName">
                @Html.ValidationMessage(nameof(Model.CustomerName),new { @style="color:#f00"})
            </div>
            <div class="form-group">
                <label>Tên Giao Dịch:</label>
                <input type="text" class="form-control"
                       name="@nameof(Model.ContactName)" value="@Model.ContactName">
                @Html.ValidationMessage(nameof(Model.ContactName), new { @style = "color:#f00" })
            </div>
            <div class="form-group">
                <label>Sô Điẹn Thoại:</label>
                <input type="text" class="form-control"
                       name="@nameof(Model.Phone)" value="@Model.Phone">
                @Html.ValidationMessage(nameof(Model.Phone), new { @style = "color:#f00" })
            </div>
            <div class="form-group">
                <label>Email:</label>
                <input type="email" class="form-control"
                       name="@nameof(Model.Email)" value="@Model.Email">
                @Html.ValidationMessage(nameof(Model.Email), new { @style = "color:#f00" })
            </div>
            <div class="form-group">
                <label>Địa Chỉ:</label>
                <input type="text" class="form-control"
                       name="@nameof(Model.Address)" value="@Model.Address">
                @Html.ValidationMessage(nameof(Model.Address), new { @style = "color:#f00" })
            </div>
            <div class="form-group">
                <label>Tỉnh/ Thành:</label>
                <select class="form-control select2" name="@nameof(Model.Province)">
                    <option value="">-- Chon Tinh/ Thanh --</option>
                    @foreach (var i in SV21T1020035.BusinessLayers.CommomDataService.ListOfProvince())
                    {
                        if (i.ProvinceName == Model.Province)
                        {
                            <option selected>@i.ProvinceName</option>
                        }
                        else
                        {
                            <option>@i.ProvinceName</option>
                        }
                    }
                </select>
                @Html.ValidationMessage(nameof(Model.Province), new { @style = "color:#f00" })
            </div>
            <div class="checkbox">
                <label>
                    <input type="checkbox" value="true" name="@nameof(Model.IsLocked)" @(Model.IsLocked?"checked":"") /> khóa tài khoản
                </label>
            </div>
            <div class="form-group text-right">
                <button type="submit" class="btn btn-primary" onclick="return confirmAlternativeData(@Model.CustomerID)">
                    <i class="fa fa-floppy-o"></i> Lưu Trữ
                </button>
                <a href="~/Customer" class="btn btn-default">
                    Quay Lại
                </a>
            </div>
        </form>
    </div>
</div>